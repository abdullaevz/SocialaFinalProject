                                                    <div class="col-sm-12 p-1">
                                                        <video class="rounded-3 w-100" controls>
                                                            <source src="@item.MediaPath" type="video/mp4">
                                                        </video>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    <div class="card-body d-flex p-0 align-items-center">
                                 


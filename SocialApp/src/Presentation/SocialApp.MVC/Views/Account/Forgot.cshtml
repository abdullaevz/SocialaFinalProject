@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reset Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/public/css/themify-icons.css">
    <link rel="stylesheet" href="~/public/css/feather.css">
    <link rel="stylesheet" href="~/public/css/style.css">
    <link rel="icon" type="image/png" sizes="16x16" href="~/public/images/favicon.png">
</head>
<body class="color-theme-blue">

    <div class="main-wrap">
        <div class="row">
            <div class="col-xl-5 d-none d-xl-block p-0 vh-100 bg-image-cover bg-no-repeat" style="background-image: url(images/login-bg-2.jpg);"></div>

            <div class="col-xl-7 vh-100 d-flex justify-content-center align-items-center bg-white rounded-3 overflow-hidden">
                <div class="card shadow-none border-0 w-100" style="max-width: 420px;">
                    <div class="card-body text-left">
                        <h2 class="fw-700 display1-size display2-md-size mb-4">Reset <br>your password</h2>
                        <p class="font-xsss text-grey-500 mb-4">
                            Enter your email and we’ll send you a link to reset your password.
                        </p>

                        <form asp-controller="Account" asp-action="SendPasswordResetLink" method="post" onsubmit="showMessage()">
                            <div class="form-group icon-input mb-3">
                                <input id="emailInput" type="email" name="email" required class="style2-input ps-5 form-control text-grey-900 font-xss ls-3" placeholder="Your Email Address">
                                <i class="font-sm ti-email text-grey-500 pe-0"></i>
                            </div>

                            <div class="form-group mb-0">
                                <button type="submit" class="form-control text-center style2-input text-white fw-600 bg-current border-0">Send Reset Link</button>
                            </div>
                        </form>

                        <div id="infoMessage" class="alert alert-info font-xsss text-center mt-4 d-none">
                            If this email exists in our system, a password reset link will be sent to it.
                        </div>

                        <div class="text-center mt-4">
                            <a href="/Account/Login" class="font-xsss text-grey-600">Back to Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/public/js/plugin.js"></script>
    <script src="~/public/js/scripts.js"></script>

    <script>
        function showMessage() {
            document.getElementById("infoMessage").classList.remove("d-none");
        }
    </script>
</body>
</html>

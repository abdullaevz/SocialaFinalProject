@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Access Denied</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f8ff; /* AliceBlue */
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .access-denied-card {
            max-width: 500px;
            background-color: #ffffff;
            border: 1px solid #cce5ff;
            box-shadow: 0 0 15px rgba(0, 123, 255, 0.1);
            padding: 30px;
            border-radius: 12px;
        }

            .access-denied-card h1 {
                color: #0d6efd;
            }

            .access-denied-card p {
                color: #6c757d;
            }
    </style>
</head>
<body>
    <div class="access-denied-card text-center">
        <h1 class="mb-3">Access Denied</h1>
        <p class="mb-4">You do not have permission to view this page. Please contact the administrator if you believe this is a mistake.</p>
        <a href="/" class="btn btn-primary px-4">Go to Home Page</a>
    </div>
</body>
</html>

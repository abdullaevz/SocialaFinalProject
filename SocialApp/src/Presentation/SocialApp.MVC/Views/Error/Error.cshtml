@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="refresh" content="5;url=/" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Oops! Something Went Wrong - Sociala</title>
    <link rel="stylesheet" href="~/public/css/themify-icons.css">
    <link rel="stylesheet" href="~/public/css/feather.css">
    <link rel="icon" type="image/png" sizes="16x16" href="~/public/images/favicon.png">
    <link rel="stylesheet" href="~/public/css/style.css">

    <style>
        .confirmation-card {
            max-width: 500px;
            margin: 0 auto;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 25px rgba(0,0,0,0.05);
        }

        .confirmation-icon {
            font-size: 80px;
            color: #f44336;
            margin-bottom: 20px;
        }

        .btn-confirmation {
            background: linear-gradient(45deg, #ff5e62, #ff9966);
            border: none;
            border-radius: 30px;
            padding: 12px 30px;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
            font-size: 14px;
        }

        .countdown {
            font-size: 14px;
            color: #999;
            margin-top: 10px;
        }
    </style>
</head>
<body class="color-theme-blue mont-font d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f5f6fa;">

    <div class="confirmation-card bg-white p-4 rounded-xxl shadow-sm" style="max-width: 550px; width: 100%;">
        <div class="text-center">
            <div class="confirmation-icon">
                <i class="feather-alert-triangle"></i>
            </div>
            <h2 class="fw-700 text-grey-900 mb-3 font-lg">Oops! An Error Occurred</h2>
            <p class="fw-500 text-grey-500 lh-24 font-xsss mb-3">
                Something went wrong while processing your request.
            </p>
            <p class="fw-500 text-grey-500 lh-24 font-xsss mb-4">
                You will be redirected to the homepage shortly.
            </p>
            <p class="countdown fw-600">
                Redirecting in <span id="timer">5</span> seconds...
            </p>
            <div class="mt-4">
                <a href="/" class="btn btn-confirmation text-white font-xsss fw-600">Go to Homepage Now</a>
            </div>
        </div>
    </div>

    <script>
        let seconds = 5;
        const timerSpan = document.getElementById("timer");

        const interval = setInterval(() => {
            seconds--;
            if (seconds <= 0) {
                clearInterval(interval);
                window.location.href = "/";
            } else {
                timerSpan.textContent = seconds;
            }
        }, 1000);
    </script>

</body>
</html>
